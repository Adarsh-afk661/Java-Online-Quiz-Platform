<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>Quiz Platform Full</display-name>

  <!-- AuthServlet mapping removed because AuthServlet is annotated with @WebServlet("/auth")
       Keep mappings only in one place (either annotations OR web.xml) to avoid duplicate mapping errors. -->

  <!-- AdminServlet mapping removed because AdminServlet is annotated with @WebServlet("/admin/*")
       Keep mappings only in one place (either annotations OR web.xml) to avoid duplicate mapping errors. -->

  <servlet>
    <servlet-name>CreatorServlet</servlet-name>
    <servlet-class>com.quizapp.servlet.CreatorServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreatorServlet</servlet-name>
    <url-pattern>/creator/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>QuizServlet</servlet-name>
    <servlet-class>com.quizapp.servlet.QuizServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>QuizServlet</servlet-name>
    <url-pattern>/quiz/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ReportServlet</servlet-name>
    <servlet-class>com.quizapp.servlet.ReportServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReportServlet</servlet-name>
    <url-pattern>/report/*</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>com.quizapp.filter.AuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/admin/*</url-pattern>
  </filter-mapping>

  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
</web-app>
